<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondBlue"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="150px"
        android:id="@+id/cardone"
        android:layout_width="match_parent"
        android:layout_height="1000px"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/mainBlue"
        >

        <TextView
            android:textColor="@color/black"
            android:textSize="70px"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="-450px"
            android:id="@+id/titleone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ByggAB" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="-350px"
            android:layout_gravity="center"
            android:id="@+id/cityone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luleå" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-300px"
            android:id="@+id/hoursone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Målare" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-250px"
            android:id="@+id/payone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-3 timmar per vecka" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-200px"
            android:id="@+id/weekone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125kr per timme" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-150px"
            android:id="@+id/abilityseven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vecka 19-23" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-100px"
            android:id="@+id/abd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erfarenhet krävs" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-50px"
            android:id="@+id/abilityone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utrustning krävs ej" />

        <TextView
            android:textColor="@color/black"
            android:textSize="60px"
            android:id="@+id/nummer"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:layout_gravity="center"
            android:text="0701234567" />

        <TextView
            android:textSize="60px"
            android:textColor="@color/black"
            android:id="@+id/ansökning"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300px"
            android:layout_gravity="center"
            android:text="ansökning@byggab.se" />

        <Button
            android:backgroundTint="@color/clickable"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="420px"
            android:text="Ansök hära!" />

    </androidx.cardview.widget.CardView>

    <Button
        android:backgroundTint="@color/clickable"
        android:id="@+id/buttontwå"
        android:layout_marginBottom="400px"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Gå tillbaka" />
</androidx.constraintlayout.widget.ConstraintLayout>